GFG QUESTION LINK -> https://practice.geeksforgeeks.org/problems/max-min/1

public static int findSum(int a[],int n) 
    {
        //code here
        int min=Integer.MAX_VALUE;
        int max=Integer.MIN_VALUE;
        for(int i=0;i<n;i++){
            if(a[i] < min)min=a[i];
            if(a[i] > max)max=a[i];
        }
        int b=min+max;
        return b;
    }
